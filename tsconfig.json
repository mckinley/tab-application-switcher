{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["chrome", "vite/client"]
  },
  "include": ["app/**/*", "test/**/*", "scripts/**/*", "*.config.ts"]
}
